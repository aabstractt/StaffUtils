{
  "name": "ithetrollidk/staffutils",
  "description": "StaffUtils",
  "minimum-stability": "dev",
  "license": "Apache-2.0",
  "require": {
    "php": "^8.0",
    "ext-yaml": "*",
    "ext-pthreads": "*",
    "ext-json": "*",
    "ext-mysqli": "*",
    "riorizkyrainey/pubsub-redis-php": "0.1.0"
  },

  "require-dev": {
    "phpstan/phpstan": "0.12.99",
    "pocketmine/pocketmine-mp": "4.0.0-BETA12"
  },

  "autoload": {
    "psr-4": {
      "": "src"
    }
  },
  "scripts": {
    "make-phar": [
      "@composer install --no-dev --classmap-authoritative --ignore-platform-reqs",
      "@php make-phar.php"
    ],
    "analyze": "@./vendor/bin/phpstan analyze --no-progress --memory-limit=2G"
  }
}